<h1>Listing posts</h1>

<table>
  <tr>
    <th>Uid</th>
    <th>Post</th>
    <th>Votes</th>
    <th>Root</th>
    <th>Rel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.uid %></td>
    <td><%= post.post %></td>
    <td><%= post.votes %></td>
    <td><%= post.root %></td>
    <td><%= post.rel %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<FORM>
    <INPUT TYPE="BUTTON" VALUE="Register" ONCLICK="window.location.href='/users/new'">
    <INPUT TYPE="BUTTON" VALUE="Login" ONCLICK="window.location.href='/users/login'">
    <INPUT TYPE="BUTTON" VALUE="New Post" ONCLICK="window.location.href='/posts/new'">
</FORM>



